<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_blue"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Call Status -->
    <TextView
        android:id="@+id/tvCallStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HD+   00:01"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="24dp" />

    <!-- Contact Name -->
    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dad"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:layout_marginTop="16dp" />

    <!-- Contact Location -->
    <TextView
        android:id="@+id/tvContactLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="South Africa"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!-- Rounded Corner Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_container"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="24dp">
        <!-- First Row of Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Add Call -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <ImageButton
                    android:id="@+id/btnAddCall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_add_call"
                    app:tint="@android:color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add call"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Video Call -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/btnVideoCall"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_video_call"
                    app:tint="@android:color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video call"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Bluetooth -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/btnBluetooth"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_bluetooth"
                    app:tint="@android:color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row of Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Speaker -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/btnSpeaker"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_speaker"
                    app:tint="@android:color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speaker"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Mute -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/btnMute"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_mic_off"
                    app:tint="@android:color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Keypad -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/btnKeypad"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_dialpad"
                    app:tint="@android:color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keypad"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Hang Up Button -->
        <ImageButton
            android:id="@+id/btnEndCall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_call_end"
            android:background="@drawable/circle_red" />
    </LinearLayout>
</LinearLayout>
