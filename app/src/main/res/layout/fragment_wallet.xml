<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WalletFrag">

    <LinearLayout
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/screamin_green"
                app:cardCornerRadius="99dp"
                app:cardElevation="4dp"
                android:layout_width="45dp"
                android:layout_height="45dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="A"
                        android:id="@+id/initial"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/displayName"
                    android:textStyle="bold"
                    android:textColor="@color/background_color"
                    android:text="Ayanda Nkwanyana"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/displayEmail"
                    android:text="as@gmail.com"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/background_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="WALLET"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="R0.00"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="36sp"
                    android:id="@+id/budgetTextView"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvTotalBudget"
                    android:text="TOTAL NET WORTH"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/addNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/ic_add_new"
                    app:civ_border_width="1dp"
                    app:civ_circle_background_color="@color/screamin_green"
                    app:civ_border_color="@color/background_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:text="New Wallet"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/background_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/ic_out"
                    app:civ_border_width="1dp"
                    app:civ_circle_background_color="@color/screamin_green"
                    app:civ_border_color="@color/background_color"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:text="Make a transfer"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/background_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Rewards"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/background_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/medal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <ImageView
                        android:layout_marginStart="20dp"
                        android:src="@drawable/badge"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:text="Set Your Rewards Section here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>