<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:cardBackgroundColor="@color/background_color"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="3dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvIntro_1"
                        android:text="We're here to support you"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:paddingTop="15sp"
                        android:textColor="@color/text_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/tvIntro_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You can report the incident safely and anonymously."
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp" />


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:text="Emergency"
                            android:paddingStart="20dp"
                            android:id="@+id/emergencyContact"
                            android:paddingEnd="20dp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:background="@drawable/button_background_color"
                            android:backgroundTint="@color/secondary_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/btnShowForm"
                            android:text="Report"
                            android:layout_marginStart="15dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background_color"
                            android:backgroundTint="@color/call_to_action_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!-- Button to open report incident bottom sheet -->

    <!-- Past incidents header -->
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/tvIncidentsReported"
        android:text="Reported Incidents "
        android:fontFamily=""
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Search through reported incidents "
        android:fontFamily=""
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Location filter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/background_view_rounded_single"
            android:layout_marginTop="10dp">

            <FrameLayout
                android:id="@+id/autocompleteFragmentFilter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/input" />


            <ImageButton
                android:id="@+id/btnSelectLocationFilter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Select on Map"
                android:padding="12dp"
                android:src="@drawable/ic_location_on"
                android:background="@android:color/transparent"
                app:tint="@color/dark_grey_blue" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvLocationFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: not set"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="8dp" />
    </LinearLayout>

    <!-- RecyclerView for incidents -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIncidents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="100dp"
        android:layout_marginTop="12dp"
        android:nestedScrollingEnabled="false"/>
</LinearLayout>
