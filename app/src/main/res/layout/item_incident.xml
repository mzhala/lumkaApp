<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/light_gray_header_color"
            app:cardCornerRadius="99dp"
            app:cardElevation="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp">

                <TextView
                    android:id="@+id/initial"
                    android:text="A"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content"
                    android:text="Incident title"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5km"
                    android:textSize="12sp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incident description"
                android:textColor="@color/text_color_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Aug 2025, 13:45 â€¢ -26.20, 28.04"
                android:textSize="12sp"
                android:paddingTop="4dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="center_vertical">

                <!-- Thumbs up icon -->
                <ImageView
                    android:id="@+id/imgThumbsUp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_upvote"
                    android:contentDescription="Thumbs up"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/tvLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingStart="4dp" />

                <!-- Filler to push flag to the right -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <!-- Flag icon -->
                <ImageView
                    android:id="@+id/imgFlag"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_flag"
                    android:contentDescription="Flag"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/tvFlags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingStart="4dp" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
