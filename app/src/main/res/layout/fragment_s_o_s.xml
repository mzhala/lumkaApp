<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginBottom="100dp">

    <!-- header -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/secondary_color"
            app:cardCornerRadius="99dp"
            app:cardElevation="4dp"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="A"
                    android:id="@+id/initial"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/displayName"
                android:textStyle="bold"
                android:textColor="@color/background_color"
                android:text="Username"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/displayEmail"
                android:text="user@gmail.com"
                android:textSize="10sp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Countdown Text -->
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/emergency_background"
        app:cardCornerRadius="99dp"
        app:cardElevation="4dp"
        android:layout_width="150dp"
        android:layout_height="150dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvCountdown"
                android:text="5"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/white"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Cancel Button -->
    <Button
        android:id="@+id/btnCancelCall"
        android:text="Cancel Call"
        android:layout_marginBottom="12dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background_color"/>

    <!-- Search Box -->
    <EditText
        android:id="@+id/etSearchContact"
        android:hint="Search contact..."
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:imeOptions="actionDone"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/input"/>

    <!-- Dynamic Emergency Contact Buttons -->


    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp"
        android:layout_marginTop="12dp"
        android:nestedScrollingEnabled="false"/>


    <!-- Last Row -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:contentDescription="Add Emergency Contact"
            app:backgroundTint="@color/dark_cyan"
            app:tint="@android:color/white"
            app:fabSize="normal"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"/>

    </LinearLayout>
</LinearLayout>
